
  <body>
    <h1>List of User</h1>

    <table border="100">
      <thead>
        <tr>
          
          
          <th>First Name</th>
          <th>Last Name</th>
          <th>Image</th>
          <th>Cohort</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @list_of_users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><img src="https://robohash.org/<%= user.image %>"></td> 
            <td><%= user.cohort.name %></td>
            <td>
              <a href="/users/<%= user.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
